{
  "name": "phoneburner/salt-lite-framework",
  "description": "Salt-Lite Framework",
  "type": "library",
  "license": "proprietary",
  "config": {
    "platform": {
      "php": "8.4"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "sllh/composer-lint": true
    }
  },
  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/http-tortilla"
    },
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/api-handler"
    },
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/composer-replacements"
    },
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/php-coding-standard"
    },
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/link-tortilla"
    }
  ],
  "autoload": {
    "files": [
      "src/functions.php"
    ],
    "psr-4": {
      "PhoneBurner\\SaltLite\\Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhoneBurner\\SaltLite\\Framework\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.4",
    "ext-amqp": "*",
    "ext-bcmath": "*",
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-exif": "*",
    "ext-gmp": "*",
    "ext-iconv": "*",
    "ext-igbinary": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-random": "*",
    "ext-redis": "*",
    "ext-sodium": "*",
    "ext-zip": "*",
    "ext-zlib": "*",
    "alek13/slack": "^2.3",
    "brick/varexporter": "^0.5.0",
    "crell/api-problem": "^3.7",
    "crell/attributeutils": "^1.2",
    "crell/serde": "^1.3.2",
    "doctrine/dbal": "^4.2.2",
    "doctrine/migrations": "^3.8.2",
    "doctrine/orm": "^3.3.1",
    "dragonmantank/cron-expression": "^3.4",
    "eventsauce/eventsauce": "^3.6.1",
    "guzzlehttp/guzzle": "^7.9.2",
    "guzzlehttp/psr7": "^2.7",
    "laminas/laminas-diactoros": "^3.5",
    "laminas/laminas-httphandlerrunner": "^2.11",
    "league/flysystem": "^3.29.1",
    "league/flysystem-aws-s3-v3": "^3.29",
    "monolog/monolog": "^3.8.1",
    "nesbot/carbon": "^3.8.4",
    "nikic/fast-route": "^1.3",
    "phoneburner/api-handler": "dev-develop",
    "phoneburner/http-tortilla": "dev-develop",
    "phoneburner/link-tortilla": "dev-main",
    "psr/cache": "^3.0.0",
    "psr/clock": "^1.0.0",
    "psr/container": "^2.0.2",
    "psr/event-dispatcher": "^1.0.0",
    "psr/http-client": "^1.0.3",
    "psr/http-factory": "^1.1.0",
    "psr/http-message": "^2.0.0",
    "psr/http-server-handler": "^1.0.2",
    "psr/http-server-middleware": "^1.0.2",
    "psr/link": "^2.0.1",
    "psr/log": "^3.0.2",
    "psr/simple-cache": "^3.0.0",
    "psy/psysh": "^0.12.7",
    "ramsey/uuid": "^4.7.6",
    "ramsey/uuid-doctrine": "^2.1",
    "symfony/amazon-sqs-messenger": "^7.2",
    "symfony/amqp-messenger": "^7.2.3",
    "symfony/cache": "^7.2.3",
    "symfony/doctrine-messenger": "^7.2",
    "symfony/event-dispatcher": "^7.2.0",
    "symfony/http-client": "^7.2.3",
    "symfony/lock": "^7.2.3",
    "symfony/mailer": "^7.2.3",
    "symfony/messenger": "^7.2.3",
    "symfony/mime": "^7.2.3",
    "symfony/process": "^7.2.0",
    "symfony/redis-messenger": "^7.2.3",
    "symfony/scheduler": "^7.2.3",
    "symfony/sendgrid-mailer": "^7.2.3"
  },
  "require-dev": {
    "brianium/paratest": "^7.7",
    "filp/whoops": "^2.17",
    "jangregor/phpstan-prophecy": "^2",
    "phoneburner/coding-standard": "dev-main",
    "phoneburner/composer-replacements": "dev-main",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpspec/prophecy": "^1.20",
    "phpspec/prophecy-phpunit": "^2.3",
    "phpstan/extension-installer": ">=1.4.3",
    "phpstan/phpstan": "^2.1.2",
    "phpstan/phpstan-deprecation-rules": "^2.0.1",
    "phpstan/phpstan-doctrine": "^2.0.1",
    "phpstan/phpstan-phpunit": "^2.0.4",
    "phpunit/phpunit": "^11.5.6",
    "rector/rector": "^2.0.7",
    "roave/security-advisories": "dev-latest",
    "spaze/phpstan-disallowed-calls": ">=4.2.1",
    "symfony/var-dumper": "^7.2.3"
  },
  "scripts": {
    "lint": "@php vendor/bin/parallel-lint -j $(nproc) --show-deprecated --exclude vendor --exclude build .",
    "phpcbf": "@php vendor/bin/phpcbf --parallel=$(nproc) --report=full",
    "phpcs": "@php vendor/bin/phpcs --parallel=$(nproc) --report=full",
    "phpstan": "@php vendor/bin/phpstan analyze --memory-limit=-1 --verbose",
    "test": [
      "@putenv XDEBUG_MODE=off",
      "@php vendor/bin/phpunit"
    ],
    "test-coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "@php vendor/bin/phpunit --coverage-html=build/phpunit"
    ],
    "test-parallel": [
      "@php vendor/bin/paratest"
    ],
    "rector": "@php vendor/bin/rector process",
    "rector-dry-run": "@php vendor/bin/rector process --dry-run",
    "ci": [
      "@lint",
      "@phpcs",
      "@test",
      "@phpstan",
      "@php vendor/bin/rector process --dry-run --clear-cache"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x"
    }
  }
}
